<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#dfdfdd" />

    <LinearLayout
        android:id="@+id/ll_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_bottom_chats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_bottom_chats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:focusable="false"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tv_bottom_chats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_bottom_chats"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:text="会话"
                        android:textColor="@color/color_text_03"
                        android:textSize="12sp" />
                </RelativeLayout>

                <online.himakeit.baseframe.ui.widget.DragPointView
                    android:id="@+id/dpv_bottom_chats"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_bottom_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:focusable="false"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tv_bottom_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_bottom_contact"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:text="通讯录"
                        android:textColor="@color/color_text_03"
                        android:textSize="12sp" />
                </RelativeLayout>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_bottom_contact_dot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/ic_red_dot" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_discover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_bottom_discover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:focusable="false"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tv_bottom_discover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_bottom_discover"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:text="发现"
                        android:textColor="@color/color_text_03"
                        android:textSize="12sp" />
                </RelativeLayout>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_bottom_discover_dot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/ic_red_dot" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_bottom_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:focusable="false"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tv_bottom_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_bottom_me"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:text="我"
                        android:textColor="@color/color_text_03"
                        android:textSize="12sp" />
                </RelativeLayout>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_bottom_me_dot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/ic_red_dot" />
            </FrameLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>